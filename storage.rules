rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Medley audio files
    match /{userId}/medley/{artistId}/audio/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId &&
        request.resource.size < 200 * 1024 * 1024;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Medley artwork
    match /{userId}/medley/{artistId}/artwork/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId &&
        request.resource.size < 20 * 1024 * 1024;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Artist photos - updated to handle subdirectories
    match /{userId}/artist-photos/{artistId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId &&
        request.resource.size < 25 * 1024 * 1024;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Live show flyers
    match /{userId}/live-shows/{artistId}/flyers/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}